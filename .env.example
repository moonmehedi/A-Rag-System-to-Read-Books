# =============================================================================
# EXAMPLE ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit the .env file with real credentials to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://studybudy:studybudy@localhost:5432/studybudy_db

# =============================================================================
# AI/ML MODEL CONFIGURATION  
# =============================================================================
# Get your token from: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=your_huggingface_token_here

# =============================================================================
# LANGCHAIN CONFIGURATION
# =============================================================================
# Get your API key from: https://smith.langchain.com/
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_PROJECT=rag-chatbot-project

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production_123456
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
DEBUG=True
RELOAD=True
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=documents

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=pdf
UPLOAD_DIR=./uploads

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
